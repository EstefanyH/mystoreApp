<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_jamonada" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_cli_hs_producto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="28dp"
                android:text="Jamonada" />

            <TextView
                android:id="@+id/txt_cli_hs_tienda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="San fernando" />

            <TextView
                android:id="@+id/txt_cli_hs_detalle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="Cerdo, 500 gr." />


            <TextView
                android:id="@+id/txt_cli_hs_precio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="28dp"
                android:gravity="bottom"
                android:text="S/. 40.00"
                />

            <TextView
                android:id="@+id/txt_cli_hs_fecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:text="01/11/2018"
                />

            <TextView
                android:id="@+id/txt_cli_hs_estado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/red_100"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="Pendiente"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>